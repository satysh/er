#!/bin/bash

if [ -d input ]; then
	cd input

	rm -fv out*
	rm -fv target_*
	rm -fv dPhi_info.txt*
	rm -fv thetaCM*
	cd -
else
	mkdir input
fi

if [ -d result ]; then
	cd result
	rm -fv *.pdf
	cd -
else
	mkdir result
fi

if [ -d output ]; then
	cd output
	rm -fv *
	cd -
else
	mkdir output
fi

rm -f case_*
